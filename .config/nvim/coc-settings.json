{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql",
    "html",
    "yaml",
    "json"
  ],

  "tsserver.formatOnType": true,
  "coc.preferences.formatOnType": true,

  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/UltiSnips"],

  // emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit",
    "!": "cd"
  },

  //coc-emoji
  "coc.source.emoji.filetypes": ["markdown"],

  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "kotlin": {
      // requires kotlin languageserver (unzip server.zip into below folder). Download it from: https://github.com/fwcd/kotlin-language-server/releases
      "command": "~/.lsp/kotlin/server/bin/kotlin-language-server",
      "filetypes": ["kotlin"]
    }
  },

  "prettier.disableSuccessMessage": true
}
